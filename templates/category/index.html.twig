{% extends 'base.html.twig' %}

{% block body %}


    {% for category in categories %}
        <a href="{{ url('category_posts', {id: category.id}) }}"><h1>{{ category.name }}</h1></a>

        {% if is_granted('ROLE_ADMIN') %}
         <a href="{{ url('category_edit',{id:category.id}) }}">{{ 'label_edit'|trans }}</a>
        {% endif %}

    {% endfor %}

{% endblock %}