{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_post_details'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{  post.title }}</h1>
    {% if post is defined and post|length %}
        <dl class="dl-horizontal">
            {{ 'label_created_at'|trans }} {{ post.createdAt|date('d/m/Y') }}

            <dd>{{  post.content }}</dd>
        </dl>


       <p>
            <a href="{{ url('posts') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}

    {{ form(form) }}

    <h4>{{ 'label_comments'|trans }}</h4>
    {% for comment in post.comments %}

        <p><b>{{ comment.nick }}</b></p>
        <p><i>{{ comment.email }}</i></p>
        <p>{{ comment.content }}</p>

    {% endfor %}


{% endblock %}